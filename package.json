{
  "name": "go-struct-analyzer",
  "displayName": "Go Struct Analyzer",
  "description": "Shows size and padding information for Go structs",
  "version": "1.0.0",
  "publisher": "your-publisher-id",
  "author": {
    "name": "Your Name"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/go-struct-analyzer"
  },
  "homepage": "https://github.com/yourusername/go-struct-analyzer",
  "bugs": {
    "url": "https://github.com/yourusername/go-struct-analyzer/issues"
  },
  "keywords": [
    "go",
    "golang",
    "struct",
    "memory",
    "padding",
    "alignment",
    "optimization"
  ],
  "galleryBanner": {
    "color": "#00ADD8",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "goStructAnalyzer.analyzeStruct",
        "title": "Analyze Struct Layout",
        "category": "Go Struct"
      }
    ],
    "configuration": {
      "title": "Go Struct Analyzer",
      "properties": {
        "goStructAnalyzer.showInlineAnnotations": {
          "type": "boolean",
          "default": true,
          "description": "Show size annotations inline with struct fields"
        },
        "goStructAnalyzer.showPadding": {
          "type": "boolean",
          "default": true,
          "description": "Highlight padding bytes in struct layout"
        },
        "goStructAnalyzer.architecture": {
          "type": "string",
          "enum": ["amd64", "386", "arm64", "arm"],
          "default": "amd64",
          "description": "Target architecture for size calculations"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}